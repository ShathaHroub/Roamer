@model IEnumerable<Guide>
@{
    ViewData["Title"] = "Guides";
}

<div class="container-fluid page-header">
    <div class="container">
        <div class="d-flex flex-column align-items-center justify-content-center" style="min-height: 400px">
            <h3 class="display-4 text-white text-uppercase">Guides</h3>
            <div class="d-inline-flex text-white">
                <p class="m-0 text-uppercase"><a class="text-white" href="">Home</a></p>
                <i class="fa fa-angle-double-right pt-1 px-3"></i>
                <p class="m-0 text-uppercase">Guides</p>
            </div>
        </div>
    </div>
</div>

<!-- Team Start -->
<div class="container-fluid py-5">
    <div class="container pt-5 pb-3">
        <div class="text-center mb-3 pb-3">
            <h6 class="text-primary text-uppercase" style="letter-spacing: 5px;">Guides</h6>
            <h1>Our Travel Guides</h1>
           
        </div>
        <div class="row">
            @foreach (var item in Model)
            {
                <div class="col-lg-3 col-md-4 col-sm-6 pb-2">
                    <div class="team-item bg-white mb-4">
                        <div class="team-img position-relative overflow-hidden">
                            <img class="img-fluid w-100" src="~/Image/@item.GuideUrl"alt="">
                            <div class="team-social">

                                <a class="btn btn-outline-primary btn-square"asp-controller="Service" asp-action="ChatRoom"><i class="fa fa-comments"></i></a>
                                <a class="btn btn-outline-primary btn-square" href=""><i class="fab fa-linkedin-in"></i></a>
                            </div>
                        </div>
                        <div class="text-center py-4">
                            <h5 class="text-truncate">@item.GuideName</h5>
                            <p class="m-0">@item.GuideDescription</p>
                            @if (User.IsInRole("Admin"))
                            {
                                <a asp-action="EditGuide" asp-route-id="@item.GuideId" class="btn btn-warning"> Edit </a>
                                <a asp-action="DeleteGuide" asp-route-id="@item.GuideId" class="btn btn-danger"> Delete </a>
                            }
                      
                        </div>
                    </div>
                </div>
            }
         
        
        </div>
    </div>
</div>
<!-- Team End -->
