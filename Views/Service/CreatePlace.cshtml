@model Roamer.ViewModels.PlaceViewModel

@{
    ViewData["Title"] = "CreatePlace";
    Layout = "_LayoutDashboard";
}



<div class="row">
    <div class="col-md-2">
        <div class="sidebar content-box" style="display: block;">
            <ul class="nav">
                <!-- Main menu -->
                <li class="current"><a asp-action="Index" asp-controller="Home"><i class="glyphicon glyphicon-home"></i> Main Page</a></li>
                <li><a asp-action="CreatePlace" asp-controller="Service"><i class="glyphicon glyphicon-folder-open"></i> Places</a></li>
                <li><a asp-action="RolesList" asp-controller="Account"><i class="glyphicon glyphicon-star"></i> Roles</a></li>
                <li><a asp-action="CreateGuide" asp-controller="Service"><i class="glyphicon glyphicon-user"></i> Guides</a></li>
                <li><a asp-action="CreatePost" asp-controller="Service"><i class="glyphicon glyphicon-pencil"></i> Posts</a></li>
                <li><a href="editors.html"><i class="glyphicon glyphicon-pencil"></i> Editors</a></li>
                <li><a href="forms.html"><i class="glyphicon glyphicon-tasks"></i> Forms</a></li>
                <li class="submenu">
                <a href="#">
                <i class="glyphicon glyphicon-list"></i> Pages
                <span class="caret pull-right"></span>
                </a>
                <!-- Sub menu -->
                <ul>
                <li><a href="login.html">Login</a></li>
                <li><a href="signup.html">Signup</a></li>
                </ul>
                </li>
            </ul>
        </div>
    </div>
    <div class="col-md-4">
        <form asp-action="CreatePlace" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="PlaceName" class="control-label"></label>
                <input asp-for="PlaceName" class="form-control" />
                <span asp-validation-for="PlaceName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PlaceHeading1" class="control-label"></label>
                <input asp-for="PlaceHeading1" class="form-control" />
                <span asp-validation-for="PlaceHeading1" class="text-danger"></span>
            </div>
               <div class="form-group">
                <label asp-for="PlaceContent1" class="control-label"></label>
                <textarea asp-for="PlaceContent1" class="form-control"></textarea>
                <span asp-validation-for="PlaceContent1" class="text-danger"></span>
            </div>
               <div class="form-group">
                <label asp-for="PlaceHeading2" class="control-label"></label>
                <input asp-for="PlaceHeading2" class="form-control" />
                <span asp-validation-for="PlaceHeading2" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PlaceImage" class="control-label"></label>
                <input asp-for="PlaceImage" type="file" id="file" class="form-control" />
                <span asp-validation-for="PlaceImage" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PlaceContent2" class="control-label"></label>
                <textarea asp-for="PlaceContent2" class="form-control"></textarea>
                <span asp-validation-for="PlaceContent2" class="text-danger"></span>
            </div>
             <div class="form-group">
                <label asp-for="PlaceContent3" class="control-label"></label>
                <textarea asp-for="PlaceContent3" class="form-control"></textarea>
                <span asp-validation-for="PlaceContent3" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="CreatePlace" class="btn btn-primary" />
                <a asp-action="Place" class="btn btn-success">Back to Places</a>
            </div>
        </form>
    </div>
</div>
