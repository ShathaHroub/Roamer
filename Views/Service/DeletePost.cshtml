@model Roamer.Models.Post

@{
    ViewData["Title"] = "DeletePost";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<div>
    
   <div class="container-sm" style="padding:100px;">
        <h3>Are you sure you want to delete this post?</h3> <br/>
        <dl class="row">
            
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.PostId)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.PostId)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.PostTitle)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.PostTitle)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.PostContent)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.PostContent)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.CreatedAt)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.CreatedAt)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.PostImagePath)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.PostImagePath)
            </dd>
        </dl>
        <form asp-action="DeletePost">
            <input type="submit" value="Delete" class="btn btn-danger" /> 
           
        </form>
        <br/>
        <a asp-action="Posts" class="btn btn-success">Back to Posts </a>
   </div>
 
    
   
</div>
