@model Roamer.Models.Post

@{
    ViewData["Title"] = "PostDetail";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<!-- Blog Detail Start -->
<div class="pb-3">
    <div class="blog-item">
        <div class="position-relative">
            <img class="img-fluid w-100" src="~/Image/@Model.PostImagePath" alt="">
            <div class="blog-date">
                <h6 class="font-weight-bold mb-n1" ></h6>
                <small class="text-white text-uppercase">@Model.CreatedAt</small>
            </div>
        </div>
    </div>
    <div class="bg-white mb-3" style="padding: 30px;">
        <div class="d-flex mb-3">
          
            <a class="text-primary text-uppercase text-decoration-none" >Tours & Travel</a>
        </div>
        <h2 class="mb-3">@Model.PostTitle</h2>
        <p>
          @Model.PostContent
        </p>
    
        <h4 class="mb-3">@Model.PostHeading</h4>
        <img class="img-fluid w-50 float-left mr-4 mb-2" src="~/Image/@Model.PostImagePath">
        <p>
           @Model.PostContent2
        </p>
        <h5 class="mb-3">@Model.PostHeading2</h5>
    
        <p>
           @Model.PostContent3
        </p>
    </div>
</div>
<!-- Blog Detail End -->
